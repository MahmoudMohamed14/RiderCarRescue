<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/layout_driver_info"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:foreground="?attr/selectableItemBackground"
        android:paddingTop="@dimen/_8sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:paddingBottom="@dimen/_8sdp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:src="@drawable/car_display"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_driver"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"

                android:src="@drawable/ic_baseline_account_circle_24"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/txt_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#737373"
                android:text="Huyndai"
                android:textSize="@dimen/_16sdp"/>
            <TextView
                android:id="@+id/txt_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#737373"
                android:text="ASR1243"
                android:textSize="@dimen/_20sdp"/>

        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="@dimen/_8sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingBottom="@dimen/_8sdp">
            <TextView
                android:id="@+id/txt_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#737373"
                android:text="Huyndai"
                android:textSize="@dimen/_14sdp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:textColor="#737373"
                android:text="@string/ascii_dot"
                android:textSize="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/txt_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#737373"
                android:drawableRight="@drawable/ic_baseline_star_24"
                android:text="3"
                android:textSize="@dimen/_14sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="@dimen/_8sdp"
            android:weightSum="12"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingBottom="@dimen/_8sdp">
            <ImageView
                android:id="@+id/img_call_drive"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_local_phone_24"
                />
            <EditText
                android:id="@+id/edt_note"
                android:layout_width="@dimen/_6sdp"
                android:layout_weight="10"
                android:hint="Any Notes?"
                android:layout_marginLeft="@dimen/_8sdp"
              android:layout_toRightOf="@+id/img_call_drive"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_send_note"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_wb_sunny_24"
                />
        </LinearLayout>


    </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>